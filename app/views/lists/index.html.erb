<div class="banner">
  <div class="container">
    <h1 class="text-center mt-3 mb-4">MovieManiax</h1>
    <h5>"Organize Your Movie Madness with MovieManiax!"</h5>
  </div>
</div>

<div class="container">
    <ul class="list-unstyled mt-2">
        <div class="d-flex flex-wrap">
            <% @lists.each do |list| %>
            <div class="card mb-3 ms-3 rounded" style="width: 28rem; height: 20rem;">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <% if list.photo.attached? %>
                      <%= cl_image_tag list.photo.key, height: 100, width: 100, radius: 10, crop: :fill %>
                    <% end %>
                <li  class="card-title text-center fw-bold mt-3">
                    <%= link_to list.name, list_path(list), class: "text-decoration-none text-dark fs-3" %>
                </li>
              </div>
          </div>
            <% end %>
          </div>
        </div>
    </ul>
</div>

<div class="d-flex justify-content-center">
   <%= link_to "Add Movie List",  new_list_path, class:"btn btn-outline-dark mb-3 rounded-pill p-3 fs-3"%>
</div>
