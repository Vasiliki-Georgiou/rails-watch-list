<h1 class="text-center mt-3 mb-4">My Movie Lists</h1>

<div>
    <ul class="list-unstyled mt-2">
        <div class="d-flex flex-wrap">
            <% @lists.each do |list| %>
            <div class="card mb-3 ms-3 rounded" style="width: 18rem; height: 14rem;">
              <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <li  class="card-title text-center fw-bold">
                    <%= link_to list.name, list_path(list), class: "text-decoration-none text-dark" %>
                </li>
              </div>
          </div>
            <% end %>
          </div>
        </div>
    </ul>
</div>

<div class="d-flex justify-content-center">
   <%= link_to "Add Movie List",  new_list_path, class:"btn btn-outline-dark mb-3 rounded-pill p-3"%>
</div>
