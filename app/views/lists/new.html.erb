<%# Header Banner %>
<div class="banner">
  <div class="container">
    <h1 class="text-center mt-3 mb-4">MovieManiax</h1>
    <h5>"Organize Your Movie Madness with MovieManiax!"</h5>
  </div>
</div>

<%# List Header %>
<div class="list-card">
  <div class="card-header d-flex justify-content-center align-items-center p-4">
    <div>
        <h5 class="card-title fw-bold ms-2">Add a movie list</h5>
    </div>
  </div>
  </div>
</div>

<%# Form  %>
<div class="form-wrapper mb-5">
  <%= simple_form_for(@list) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <div class="d-flex justify-content-center mt-5 align-items-center">
      <%= f.submit class: "btn btn-outline-warning mb-3 rounded-pill p-3 me-3 fs-4" %>
      <%= link_to "Back to lists", lists_path, class: "btn btn-outline-dark mb-3 rounded-pill p-3 me-2 fs-4" %>
    </div>
  <% end %>
</div>
