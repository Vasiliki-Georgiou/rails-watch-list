<h1>List Details</h1>

<div class="card">
  <div class="card-header">
    <h5 class="card-title"><%= @list.name %></h5>
  </div>
  <div class="card-body d-flex flex-column align-items-center">
    <%= link_to "Back to Lists", lists_path, class: "btn btn-primary" %>
  </div>
</div>


<div>
  <% @list.bookmarks.each do |bookmark| %>
      <p><%= bookmark.movie.title %></p>
      <%= link_to "Delete this movie", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class:"btn btn-warning"  %>
  <% end %>
</div>

 <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class:"btn btn-success"%>
