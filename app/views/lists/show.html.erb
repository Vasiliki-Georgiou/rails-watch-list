<div class="banner">
  <div class="container">
    <h1 class="text-center mt-3 mb-4">List Details</h1>
  </div>
</div>

<div class="card">
  <div class="card-header d-flex justify-content-center align-items-center">
    <div>
        <h5 class="card-title"><%= @list.name %></h5>
    </div>
    <div>
          <%= cl_image_tag @list.photo.key, height: 40, width: 40, radius: 50, crop: :fill %>
    </div>
  </div>
  <div class="card-body d-flex flex-column align-items-center">
  <div>
    <% @list.bookmarks.each do |bookmark| %>
        <p><%= bookmark.movie.title %>
        </p>
        <%= link_to "Delete this movie", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class:"btn btn-outline-danger mb-3 rounded-pill p-3"  %>
    <% end %>
  </div>

    <%= link_to "Back to Lists", lists_path, class: "btn btn-outline-dark mb-3 rounded-pill p-3" %>
  </div>
</div>

<div class="footer-buttons">
  <div>
    <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class:"btn btn-outline-dark mb-3 rounded-pill p-3"%>
  </div>
  <div>
    <%= link_to "Delete this list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-outline-danger mb-3 rounded-pill p-3" %>
  </div>
</div>
